# Environment (dev | prod | qa | test)
ENV=prod
DEBUG=False

# Django Core
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (for Docker)
DATABASE_URL=postgres://postgres:CHANGE_ME@db:5432/littlesigns

# Alternative Database Settings (if not using DATABASE_URL)
DATABASE=postgres
SQL_HOST=db
SQL_PORT=5432
SQL_DATABASE=littlesigns
SQL_USER=postgres
SQL_PASSWORD=CHANGE_ME

# Time & Language
LANGUAGE_CODE=en-us
TIMEZONE=UTC
USE_I18N=True
USE_L10N=True
USE_TZ=True

# Email Configuration (optional)
EMAIL_FROM=noreply@littlesigns.co.zw
EMAIL_HOST=
EMAIL_PORT=
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# URLs
LOGIN_URL=/account/login/
LOGIN_REDIRECT_URL=/learn/

# Cloudflare R2 Storage (for media files)
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET_NAME=littlesigns-media
R2_CUSTOM_DOMAIN=storage.littlesigns.co.zw
R2_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com

# Static Files
STATIC_URL=/static/

# Celery (optional)
CELERY_BROKER_URL=redis://cache
CELERY_TASK_ALWAYS_EAGER=False

# Debug Tools
USE_DEBUG_TOOLBAR=True
USE_DJANGO_EXTENSIONS=False

# Sentry (optional)
USE_SENTRY=False
SENTRY_DSN=

# Frontend
VITE_API_BASE_URL=http://localhost:8000/api/v1
