# Environment
ENV=dev
DEBUG=true

# Locale
LANGUAGE_CODE=en-us
TIMEZONE=UTC
USE_I18N=true
USE_L10N=true
USE_TZ=true

# Email
EMAIL_FROM=admin@example.com
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=your_username
EMAIL_HOST_PASSWORD=your_password

# Security
SECRET_KEY=change-me
ALLOWED_HOSTS=localhost,127.0.0.1

# Auth redirects
LOGIN_URL=/account/login/
LOGIN_REDIRECT_URL=/learn/

# Database
# Example: postgres://USER:PASSWORD@HOST:PORT/DBNAME
DATABASE_URL=postgres://postgres:postgres@localhost:5432/littlesigns

# Cloudflare R2 / S3-compatible storage
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET_NAME=your_r2_bucket
R2_CUSTOM_DOMAIN=storage.littlesigns.co.zw
R2_ENDPOINT_URL=https://{account_id}.r2.cloudflarestorage.com

# Static files
STATIC_URL=/static/

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_TASK_ALWAYS_EAGER=false

# Tooling
USE_DEBUG_TOOLBAR=false
USE_DJANGO_EXTENSIONS=false

# Sentry
USE_SENTRY=false
SENTRY_DSN=